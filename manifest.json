{
  "name": "Official document helper",
  "description": "Official text document code viewer helper",
  "version": "1.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/code-16.png",
      "32": "/images/code-32.png",
      "48": "/images/code-48.png",
      "128": "/images/code-128.png"
    }
  },
  "icons": {
    "16": "/images/code-16.png",
    "32": "/images/code-32.png",
    "48": "/images/code-48.png",
    "128": "/images/code-128.png"
  }
}
