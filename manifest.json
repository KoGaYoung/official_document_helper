{
  "name": "Official document helper",
  "description": "Official tect document code viewer helper",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/code-16.png",
      "32": "/images/code-32.png",
      "48": "/images/code-48.png",
      "128": "/images/code-128.png"
    }
  },
  "icons": {
    "16": "/images/code-16.png",
    "32": "/images/code-32.png",
    "48": "/images/code-48.png",
    "128": "/images/code-128.png"
  },
  "options_page": "options.html"
}
